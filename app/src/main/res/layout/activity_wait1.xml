<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.example.daxinli.tempmusic.util.effect.pathviewer.PathSurfaceView
            android:id="@+id/wait_pathView"
            android:layout_width="match_parent"
        android:layout_height="match_parent" />
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daxinli.tempmusic.MutigameModule.Activity.Composition.WaitActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_margin="30dp"
            android:id="@+id/wait_titleDanmu"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="50dp" />
        <FrameLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="180dp" >
            <ImageView
                android:id="@+id/wait_picliaotian"
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitXY"/>
            <master.flame.danmaku.ui.widget.DanmakuView
                android:id="@+id/danmakuview_leader"
                android:layout_marginTop="10dp"
                android:layout_width="340dp"
                android:layout_height="match_parent" />
        </FrameLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edittext_danmu_createhome"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:layout_marginLeft="23dp"
                android:gravity="left"
                android:hint="听说会发弹幕的都有女朋友哦~"
                android:textColor="@color/colorBlue"
                android:textSize="15dp" />
            <Button
                android:id="@+id/btn_danmusend_createhome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发射"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal" >
            <LinearLayout
                android:id="@+id/li_instru0"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_Instru1_wait1"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center">
                </de.hdodenhof.circleimageview.CircleImageView>
                <TextView
                    android:id="@+id/text_instruSelect1_wait1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/li_instru1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_Instru2_wait1"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center">
                </de.hdodenhof.circleimageview.CircleImageView>
                <TextView
                    android:id="@+id/text_instruSelect2_wait1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/li_instru2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_Instru3_wait1"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:gravity="center"
                    android:layout_gravity="center">
                </de.hdodenhof.circleimageview.CircleImageView>
            <TextView
                android:id="@+id/text_instruSelect3_wait1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/li_instru3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_Instru4_wait1"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center">
                </de.hdodenhof.circleimageview.CircleImageView>
            <TextView
                android:id="@+id/text_instruSelect4_wait1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text=""/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Lilayout_tohide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="40dp"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="音乐名："/>
            <EditText
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="5dp"
                android:id="@+id/edittext_musicname"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textSize="10dp"
                android:text="new_Music"/>
            <TextView
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BPM："/>
            <EditText
                android:textColor="@color/colorWhite"
                android:textSize="10dp"
                android:id="@+id/edittext_bpm"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="120"/>
        </LinearLayout>
        <TextView
            android:textColor="@color/colorWhite"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:id="@+id/text_amout_peoplein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="文本框"/>
        <Button
            android:layout_gravity="center"
            android:id="@+id/btn_leader_startgame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始游戏"/>


    </LinearLayout>

</LinearLayout>
</FrameLayout>