<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daxinli.tempmusic.MutigameModule.Activity.CreateHomeActivtiy">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="50dp"
            android:id="@+id/text_forfun"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里用来实现弹幕效果"/>
        <com.wang.avi.AVLoadingIndicatorView
            android:layout_marginTop="200dp"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <TextView
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:id="@+id/text_amout_peoplein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="文本框"/>
        <Button
            android:layout_gravity="center"
            android:id="@+id/btn_leader_startgame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始游戏"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
